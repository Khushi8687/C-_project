@model C__project.Models.Shift
@{
    ViewBag.Title = "Add";
}

<h2>Add Shift</h2>

<form action="/Shift/Create" method="POST">
    <div>
        <label>Day:</label> <input type="text" name="Day" />
    </div>
    <div>
        <label>Date:</label> <input type="date" name="Date" />
    </div>
    <div>
        <label>StartTime:</label> <input type="datetime" name="StartTime" />
    </div>
    <div>
        <label>EndTime:</label> <input type="text" name="EndTime" />
    </div>
    <div>
        <label>Staff:</label> <input type="number" name="StaffID" />
    </div>
    <div>
        <input type="submit" value="Add Shift" />
    </div>
</form>
<style>
    form div {
        margin-bottom: 10px;
    }

    label {
        display: inline-block;
        width: 6%;
    }


    form input[type="text"],
    form input[type="datetime"],
    form input[type="date"]
    {
        width: 70%;
        padding: 5px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    form input[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: #344E41;
        color: white;
        border: none;
        border-radius: 5px;
    }

        form input[type="submit"]:hover {
            background-color: #2E3D34;
        }
</style>