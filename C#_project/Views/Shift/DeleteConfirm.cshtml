@model C__project.Models.ShiftDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>DeleteConfirm</h2>

<h2>Are you sure you want to delete this shift?</h2>
<a class="btn cancel" href="/Staff/List">Cancel</a>
<form action="/Shift/Delete/@Model.ShiftID" method="POST">
    <input type="submit" value="Confirm Delete" />
</form>

<style>
    .btn {
        padding: 5px;
        background-color: burlywood;
    }
</style>
