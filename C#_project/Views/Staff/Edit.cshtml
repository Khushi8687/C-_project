﻿@model C__project.Models.StaffDto
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="POST" action="/Staff/Update/@Model.StaffID">
    <input type="text" style="display:none;" name="StaffId" value="@Model.StaffID" />
    <div>
        <label>Name</label>
        <input type="text" name="StaffName" value="@Model.StaffName" />
    </div>
    <div>
        <label>Email</label>
        <input type="email" name="Email" value="@Model.Email" />
    </div>
    <div>
        <div>
            <label>Contact</label> <input type="text" name="Contact" />
        </div>
        <div>
            <label>Birthdate:</label> <input type="date" name="BirthDate" />
        </div>
        <div>
            <label>Hiredate:</label> <input type="date" name="HireDate" />
        </div>
        <div>
            <label>Address:</label> <input type="text" name="Address" />
        </div>

        <input type="submit" value="Update" />
    </div>

</form>