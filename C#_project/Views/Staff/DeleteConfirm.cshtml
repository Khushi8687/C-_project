﻿@model C__project.Models.StaffDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>DeleteConfirm</h2>

<h2>Are you sure you want to delete this staff?</h2>
<a href="/Staff/List">Cancel</a>
<h2>@Model.StaffName</h2>
<div>Name: @Model.StaffName</div>
<div>Email: @Model.Contact</div>
<form action="/Staff/Delete/@Model.StaffID" method="POST">
    <input type="submit" value="Confirm Delete" />

</form>